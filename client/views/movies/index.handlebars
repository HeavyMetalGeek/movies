<div class="container p-0 mb-3">
	<form action="/movies" method="get">
	  <div class="form-row align-items-center">
	  	<div class="col-9">
	  		<input class="form-control" type="text" name="search" placeholder="Movie search...">	
	  	</div>
	  	<div class="col-3">
		    <input class="btn btn-block btn-primary" type="submit" value="Search">
	  	</div>
	  </div>
	</form>
</div>
{{#each movies}}
	<div class="card card-body mb-2 hover-hide">
		<div class="row">
			<div class="col-8 col-md-10">
				<h4>{{title}} <span class="">({{year}})</span></h4>
				<p>
					<span class="rounded-0 badge border border-dark">{{rating}}</span>
					<span class="genre">{{genre}}</span>
				</p>
			</div>
			<div class="col-4 col-md-2 mx-0 btn-group-vertical hover-hide-col">
				<form class="btn-block">
					<a class="btn btn-primary btn-block" href="/movies/edit/{{id}}">Edit</a>
				</form>
				<form class="btn-block" method="post" action="/movies/{{id}}?_method=DELETE">
					<input type="hidden" name="title" value="{{title}}">
					<button type="submit" class="btn btn-danger" value="Delete">Delete</button>
				</form>
			</div>
		</div>
	</div>
{{else}}
	<p>No video ideas listed</p>
{{/each}}