<div class="container p-0 mb-3">
	<form action="/movies" method="get">
	  <div class="form-row align-items-center">
	  	<div class="col-9">
	  		<input class="form-control" type="text" name="search" placeholder="Movie search...">	
	  	</div>
	  	<div class="col-3">
		    <input class="btn btn-block btn-primary" type="submit" value="Search">
	  	</div>
	  </div>
	</form>
</div>
{{#each movies}}
	<div class="card card-body mb-2">
		<h4>{{title}} <span class="">({{year}})</span></h4>
		<p><span class="rounded-0 badge border border-dark">{{rating}}</span><span class="genre">{{genre}}</span></p>
		<!--
		<a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
		<form method="post" action="/ideas/{{id}}?_method=DELETE">
			<input type="hidden" name="_method" value="DELETE">
			<input type="submit" class="btn btn-danger btn-block" value="Delete">
		</form>
		-->
	</div>
{{else}}
	<p>No video ideas listed</p>
{{/each}}